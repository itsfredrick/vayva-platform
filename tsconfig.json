{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@vayva/db": [
                "infra/db/src/client.ts"
            ]
        }
    },
    "include": [
        "apps/*/src/**/*",
        "packages/*/src/**/*",
        "infra/*/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".next",
        "build"
    ]
}