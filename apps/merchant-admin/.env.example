# Vayva Merchant Admin - Environment Variables

# Database
DATABASE_URL="postgresql://..."

# Authentication & Security
JWT_SECRET="your-jwt-secret-here"
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Monitoring
SENTRY_DSN="https://key@sentry.io/project"

# Paystack (Test Keys)
PAYSTACK_SECRET_KEY="sk_test_..."
PAYSTACK_PUBLIC_KEY="pk_test_..."

# Resend (Email)
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="onboarding@resend.dev"

# Optional: Cloudinary (for production file uploads)
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""

# P11.2: Ops Dashboard Feature Flags (default: ON in dev, OFF in prod)
OPS_P11_2_ENABLED="true"
OPS_API_ERROR_TRACKING_ENABLED="true"
OPS_INTEGRATION_HEALTH_ENABLED="true"
