# Vayva Merchant Admin - Environment Variables

# Database
DATABASE_URL="postgresql://..."
REDIS_URL="redis://localhost:6379"

# Authentication & Security
JWT_SECRET="your-jwt-secret-here"
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Monitoring
SENTRY_DSN="https://key@sentry.io/project"

# Paystack (Test Keys)
PAYSTACK_SECRET_KEY="sk_test_..."
PAYSTACK_PUBLIC_KEY="pk_test_..."

# Resend (Email)
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="onboarding@resend.dev"

# Optional: Cloudinary (for production file uploads)
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""

# P11.2: Ops Dashboard Feature Flags (default: ON in dev, OFF in prod)
OPS_P11_2_ENABLED="true"
OPS_API_ERROR_TRACKING_ENABLED="true"
OPS_INTEGRATION_HEALTH_ENABLED="true"

# Feature Flags
ENABLE_AI_ASSISTANT="true"
LAUNCH_MODE="false"

# AI & LLM (Groq)
GROQ_API_KEY="gsk_..."
GROQ_ADMIN_KEY="gsk_..."
GROQ_MARKETING_KEY="gsk_..."
GROQ_WHATSAPP_KEY="gsk_..."
GROQ_API_KEY_SUPPORT="gsk_..."
AI_MODEL="llama-3.1-70b-versatile"
AI_MAX_TOKENS="1024"
AI_TEMPERATURE="0.7"

# Delivery (Kwik)
KWIK_API_KEY="your-kwik-key"
KWIK_MERCHANT_ID="your-merchant-id"
KWIK_BASE_URL="https://api.kwik.delivery"
KWIK_WEBHOOK_SECRET="your-webhook-secret"

# WhatsApp Integration
WHATSAPP_API_KEY="your-wa-key"
WHATSAPP_PHONE_NUMBER="234..."
WHATSAPP_WEBHOOK_SECRET="your-wa-hook-secret"

# Identity Verification (YouVerify)
YOUVERIFY_API_KEY="your-yv-key"
YOUVERIFY_APP_ID="your-yv-app-id"
YOUVERIFY_BASE_URL="https://api.youverify.co"

# File Storage (Vercel Blob)
BLOB_READ_WRITE_TOKEN="vercel_blob_..."

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_STOREFRONT_URL="http://localhost:3001"
