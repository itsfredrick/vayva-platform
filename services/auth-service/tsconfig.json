{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "moduleResolution": "bundler",
        "baseUrl": "../../",
        "paths": {
            "@vayva/db": [
                "infra/db/src/client.ts"
            ],
            "@vayva/extensions": [
                "packages/extensions/src/index.ts"
            ],
            "@vayva/extensions/*": [
                "packages/extensions/src/*"
            ],
            "@vayva/shared": [
                "packages/shared/src/index.ts"
            ],
            "@vayva/shared/*": [
                "packages/shared/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}