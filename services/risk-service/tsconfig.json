{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "../../",
        "paths": {
            "@vayva/db": [
                "infra/db/src/client.ts"
            ],
            "@vayva/extensions": [
                "packages/extensions/src/index.ts"
            ],
            "@vayva/extensions/*": [
                "packages/extensions/src/*"
            ],
            "@vayva/shared": [
                "packages/shared/src/index.ts"
            ],
            "@vayva/shared/*": [
                "packages/shared/src/*"
            ]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ]
}