# Database
DATABASE_URL="postgresql://user:password@host:5432/vayva_prod?schema=public"

# Redis (for BullMQ)
REDIS_URL="redis://default:password@host:6379"

# NextAuth
NEXTAUTH_URL="https://vayva.ng"
VAYVA_CANONICAL_ORIGIN="https://vayva.ng"

NEXTAUTH_SECRET="<generate-with-openssl-rand-base64-32>"

# Paystack
PAYSTACK_SECRET_KEY="sk_live_..."
PAYSTACK_PUBLIC_KEY="pk_live_..."

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# Build Metadata
NEXT_PUBLIC_BUILD_STAMP="${VERCEL_GIT_COMMIT_SHA}-${VERCEL_GIT_COMMIT_REF}"

# Feature Flags (if any)
NEXT_PUBLIC_ENABLE_MARKETPLACE="false"
