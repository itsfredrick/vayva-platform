{
  "name": "vayva",
  "private": true,
  "packageManager": "pnpm@10.2.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:smoke": "node scripts/smoke.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "doctor": "node scripts/doctor.js",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "validate:ship": "pnpm doctor && pnpm lint && pnpm build && pnpm test:e2e",
    "check:runtime": "node scripts/check-runtime-boundaries.mjs",
    "check:bundle": "node scripts/check-bundle-size.mjs",
    "db:seed": "node infra/db/prisma/seed.ts",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "check:prisma": "node scripts/check-prisma-versions.js",
    "postinstall": "turbo run db:generate"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@prisma/client": "5.7.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.28",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsonwebtoken": "^9.0.3",
    "prettier": "^3.0.0",
    "prisma": "5.22.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.6.2",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20"
  },
  "prisma": {
    "schema": "infra/db/prisma/schema.prisma"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3"
  }
}